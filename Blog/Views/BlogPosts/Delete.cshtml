@model TheatreCMS3.Areas.Blog.Models.BlogPost

@{
    ViewBag.Title = "Delete";
}

<h2 class="text-center pt-3 pb-3"><b><u>Delete this BlogPost?</u></b></h2>

<div class="container-fluid justify-content-center cms-bg-main">
    <hr />
    <div class="form-group justify-content-center cms-text-light">
        <div class="form-group text-center h1">
            <b><u>@Html.DisplayFor(model => model.Title)</u></b>
        </div>
        <div class="form-group text-center">
            <img src="https://external-content.duckduckgo.com/iu/?u=https%3A%2F%2Fmountaintopmedium.com%2Fwp-content%2Fuploads%2Fwoocommerce-placeholder-500x500.png&f=1&nofb=1" class="w-100" />
        </div>
        <div class="form-group">
            @Html.DisplayFor(model => model.Author)
        </div>
        <div class="form-group">
            @Html.DisplayFor(model => model.Posted)
        </div>
        <div class="form-group">
            @Html.DisplayFor(model => model.Content)
        </div>
    </div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-group col-md-12t">
            <a class="btn btn-default create-submit text-left" href=@Url.Action("Edit", new { id = Model.BlogPostID })>
                <i class="fas fa-edit"> Edit</i>
            </a>
            <a class="btn btn-default create-cancel" href=@Url.Action("Index") role="button">
                <i class="fas fa-arrow-circle-left"> Back to List</i>
            </a>
            <button type="submit" value="Delete" class="btn cms-bg-main btn-outline-dark float-right">
                <i class="fas fa-trash">Delete</i>
            </button>      
        </div>
        <hr />
    }
</div>

    


