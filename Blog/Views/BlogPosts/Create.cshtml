@model TheatreCMS3.Areas.Blog.Models.BlogPost

@{
    ViewBag.Title = "Create";
}

<h2>Create Blog Post</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

        <div class="container h-100">
            <div class="row h-100 justify-content-center align-items-center">
                <div class="col-auto col-md-auto col-lg-6">
                    <div class="form-horizontal create-form-color justify-content-center">
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group create-form-line-active">
                            @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-auto">
                                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter title" } })
                                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group create-form-line-active">
                            @Html.LabelFor(model => model.Content, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-auto">
                                @Html.EditorFor(model => model.Content, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter content" } })
                                @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group create-form-line-active">
                            @Html.LabelFor(model => model.Posted, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-auto">
                                @Html.EditorFor(model => model.Posted, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Posted, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group create-form-line-active">
                            @Html.LabelFor(model => model.Author, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-auto">
                                @Html.EditorFor(model => model.Author, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter author name" } })
                                @Html.ValidationMessageFor(model => model.Author, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-auto text-center">
                                <input type="submit" value="Create" class="btn btn-default col-md-10 create-submit" />
                                <br />
                                <br />
                                <a class="btn btn-default col-md-10 create-cancel" href=@Url.Action("Index") role="button">Back to List</a>
                                <br />
                                <br />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
  }

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
